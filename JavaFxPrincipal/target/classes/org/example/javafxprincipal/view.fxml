<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- The root layout is a VBox, a vertical box layout -->
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxprincipal.Controller"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

  <!-- Title label for the application -->
  <Label text="Principal Calculation App" style="-fx-font-size: 16px;"/>

  <!-- Label and text field for entering the amount -->
  <Label text="Enter Amount:"/>
  <TextField fx:id="amountField" promptText="Amount"/>

  <!-- Label and text field for entering the rate -->
  <Label text="Enter Rate:"/>
  <TextField fx:id="rateField" promptText="Rate"/>

  <!-- Label and text field for entering the time -->
  <Label text="Enter Time:"/>
  <TextField fx:id="timeField" promptText="Time"/>

  <!-- Button to trigger the calculation -->
  <Button fx:id="calculateButton" text="Calculate Principal"/>

  <!-- Label to display the result -->
  <Label fx:id="resultLabel" text="Result will be shown here" style="-fx-font-size: 14px;"/>
</VBox>
